{% extends 'base.html.twig' %}

{% block title %}Crea un chat{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/chat/chats.css')}}"/>
        <div class="create-chats-content">
            <h1>Create a New Chat</h1>

            {{ form_start(form) }}
            <div>
                <label for="create-chat_users">Select Users</label>
                {{ form_widget(form.users) }}
            </div>

            <div class="btn-divider">
                <button type="submit" class="create-chat-button create-chat">Create Chat</button> <!-- btn btn-primary -->
                {{ form_end(form) }}
                <a href="{{ path('app_chat') }}" class="back-to-chats">Back to Chats</a> <!-- btn-secondary -->
            </div>
        </div>
{% endblock %}