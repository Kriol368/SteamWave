{% extends 'base.html.twig' %}

{% block title %}Placeholder{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/chat/chats.css')}}"/>
    <div class="">
        <h1>Chat:</h1>
        <h3>Participants:</h3>
        <ul>
            {% for user in chat.users %}
                <li>{{ user.name }}</li>
            {% else %}
                <li>No participants</li>
            {% endfor %}
        </ul>

            <div class="chats-content">
                <ul class="chat-li">
                {% for message in messages %}
                    {% if message.user == user %}
                        <div class="your-message message">
                            <li>{{message.text}}</li>
                            <li>{{message.sentAt|date('H:i:s')}}</li>
                        </div>
                    {% else %}
                        <div class="1else-message message">
                            <li>{{message.text}}</li>
                            <li>{{message.sentAt|date('H:i:s')}}</li>
                        </div>
                    {% endif %}
                {% endfor %}
                </ul>
            </div>

            <div>
                <input type="text">
                <input type="button" value="enviar">
            </div>
    </div>



    <a href="{{ path('app_chat') }}" class="btn btn-secondary">Back to Chats</a>
{% endblock %}
