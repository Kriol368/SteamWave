{# templates/post/create_post.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Create a New Post</h1>

    {{ form_start(form) }}
    {{ form_row(form.content) }}
    {{ form_row(form.image) }}
    {{ form_row(form.tag) }}
    <button type="submit" class="btn btn-primary">Submit</button>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/populateTagSelect.js') }}"></script>
{% endblock %}
