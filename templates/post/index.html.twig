{% extends 'base.html.twig' %}

{% block title %}All Posts{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .post-item { border-bottom: 1px solid #ddd; padding: 1em 0; }
        .post-image { max-width: 150px; height: auto; margin-top: 0.5em; }
    </style>

    <div class="example-wrapper">
        <h1>All Posts</h1>

        {% if posts is empty %}
            <p>No posts available.</p>
        {% else %}
            <ul>
                {% for post in posts %}
                    <li class="post-item">
                        <strong>Content:</strong> {{ post.content }} <br>
                        <strong>Published at:</strong> {{ post.publishedAt|date('Y-m-d H:i') }} <br>
                        <strong>Author:</strong> {{ post.postUser.name }} <br> <!-- Adjust if postUser name field is different -->
                        {% if post.tag %}
                            <strong>Tag:</strong> {{ post.tag }}
                        {% endif %}

                        {% if post.image %}
                            <div>
                                <img src="{{ asset('uploads/media/' ~ post.image) }}" alt="Post Image" class="post-image">
                            </div>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
{% endblock %}
