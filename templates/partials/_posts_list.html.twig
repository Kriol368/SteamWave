{# templates/partials/_posts_list.html.twig #}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .post-item { border-bottom: 1px solid #ddd; padding: 1em 0; display: flex; gap: 1em; align-items: flex-start; }
    .profile-picture { width: 50px; height: 50px; border-radius: 50%; object-fit: cover; }
    .post-content { flex: 1; }
    .post-image, .post-video { max-width: 150px; height: auto; margin-top: 0.5em; }
    .post-video { max-width: 300px; } /* Optional, adjust video preview size */
</style>

<div class="example-wrapper">
    {% if posts is empty %}
        <p>No posts available.</p>
    {% else %}
        <ul>
            {% for post in posts %}
                <li class="feed-entry">
                    {# User Profile Section #}
                    <div class="profileImg">
                        {% if post.postUser.profilePicture %}
                            <img src="{{ asset('uploads/profiles/' ~ post.postUser.profilePicture) }}" alt="{{ post.postUser.name }}'s Profile Picture" class="profile-picture">
                        {% else %}
                            <img src="{{ asset('uploads/profiles/default-profile.png') }}" alt="Default Profile Picture" class="profile-picture">
                        {% endif %}
                    </div>
                    <div class="user">
                        <strong class="user">{{ post.postUser.name }}</strong> <br>
                    </div>
                    <div class="post-text">
                        <strong></strong> {{ post.content }} <br>
                    </div>
                    <div class="post-tag">
                        {% if post.tag %}
                            <strong>Tag:</strong> {{ post.tag }} <br>
                        {% endif %}
                    </div>
                    <div class="post-image">
                        {# Image or Video Preview #}
                        {% if post.image %}
                            {% if post.image matches '/\.(mp4|webm|ogg)$/i' %}
                                <div>
                                    <video class="post-video" controls>
                                        <source src="{{ asset('uploads/media/' ~ post.image) }}" type="video/{{ post.image|slice(-3) }}">
                                        Your browser does not support the video tag.
                                    </video>
                                </div>
                            {% elseif post.image matches '/\.(jpg|jpeg|png|gif)$/i' %}
                                <div>
                                    <img src="{{ asset('uploads/media/' ~ post.image) }}" alt="Post Image" class="post-image">
                                </div>
                            {% else %}
                                <p>Unsupported media format.</p>
                            {% endif %}
                        {% endif %}
                    </div>

                </li>
            {% endfor %}
        </ul>
    {% endif %}
</div>
