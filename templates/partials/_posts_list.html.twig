{# templates/partials/_posts_list.html.twig #}
<link rel="stylesheet" href="{{ asset('css/feedEntry.css') }}"/>

<div class="example-wrapper">
    {% if posts is empty %}
        <p>No posts available.</p>
    {% else %}
        <ul>
            {% for post in posts %}
                <li class="feed-entry">
                    {# User Profile Section #}
                    <div class="profileImg">
                        <img src="{{ post.profilePicture }}" alt="{{ post.username }}'s Profile Picture" class="profile-picture">
                    </div>
                    <div class="user">
                        <strong class="user">{{ post.username }}</strong> <br>
                    </div>
                    <div class="post-text">
                        <strong></strong> {{ post.content }} <br>
                    </div>
                    <div class="post-tag">
                        {% if post.tag %}
                            <strong>Tag:</strong> {{ post.tag }} <br>
                        {% endif %}
                    </div>
                    <div class="post-image">
                        {# Image or Video Preview #}
                        {% if post.image %}
                            {% if post.image matches '/\.(mp4|webm|ogg)$/i' %}
                                <div>
                                    <video class="post-video" controls>
                                        <source src="{{ asset('uploads/media/' ~ post.image) }}" type="video/{{ post.image|slice(-3) }}">
                                        Your browser does not support the video tag.
                                    </video>
                                </div>
                            {% elseif post.image matches '/\.(jpg|jpeg|png|gif)$/i' %}
                                <div>
                                    <img src="{{ asset('uploads/media/' ~ post.image) }}" alt="Post Image" class="post-image">
                                </div>
                            {% else %}
                                <p>Unsupported media format.</p>
                            {% endif %}
                        {% endif %}
                    </div>

                </li>
            {% endfor %}
        </ul>
    {% endif %}
</div>
