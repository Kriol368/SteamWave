{% extends 'base.html.twig' %}

{% block title %}Steam Info{% endblock %}

{% block body %}
    <h1>Steam Information</h1>

    {% if playerSummary %}
        <h2>Profile Information</h2>
        <p><strong>Username:</strong> {{ playerSummary.personaname }}</p>
        <p><strong>Profile URL:</strong> <a href="{{ playerSummary.profileurl }}" target="_blank">{{ playerSummary.profileurl }}</a></p>
        <p><strong>Avatar:</strong> <img src="{{ playerSummary.avatar }}" alt="Avatar"></p>
    {% endif %}

    {% if ownedGames is not empty %}
        <h2>Owned Games</h2>
        <ul>
            {% for game in ownedGames %}
                <li>
                    <strong>{{ game.name }}</strong> - Playtime: {{ game.playtime_forever // 60 }} hours
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No owned games found.</p>
    {% endif %}

    {% if recentGames is not empty %}
        <h2>Recently Played Games</h2>
        <ul>
            {% for game in recentGames %}
                <li>
                    <strong>{{ game.name }}</strong> - Playtime (recent): {{ game.playtime_2weeks // 60 }} hours
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No recently played games found.</p>
    {% endif %}
{% endblock %}
